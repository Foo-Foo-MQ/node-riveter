{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "target": "es5",
    "lib": ["es5", "es6", "es7"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noImplicitAny": false
  },
  "exclude": ["node_modules", "**/*spec.ts", "dist"],
  "inlclude": ["lib"]
}
